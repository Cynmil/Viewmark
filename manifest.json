{
  "name": "Viewmark",
  "version": "1.0",
  "description": "Saves the current sessions of the google chrome tabs.",
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_title": "Viewmark",
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/viewmark_icon16.png",
        "32": "icons/viewmark_icon32.png",
        "48": "icons/viewmark_icon48.png",
        "128": "icons/viewmark_icon128.png"
    }
  },
  "icons": {
    "16": "icons/viewmark_icon16.png",
    "32": "icons/viewmark_icon32.png",
    "48": "icons/viewmark_icon48.png",
    "128": "icons/viewmark_icon128.png"
  },
  "manifest_version": 2
}